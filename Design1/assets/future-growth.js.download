document.addEventListener("DOMContentLoaded",function(){var videos=document.querySelectorAll(".future-growth-video");var playButtons=document.querySelectorAll(".future-growth-video-play-btn");if(videos.length>0&&playButtons.length>0){playButtons.forEach(function(button,index){button.addEventListener("click",function(){var video=videos[index];if(video.paused){video.play();button.innerHTML='<span class="icon-pause"></span>'}else{video.pause();button.innerHTML='<span class="icon-play"></span>'}})})}})