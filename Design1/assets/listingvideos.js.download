var modal=document.getElementById("videoModal");var span=document.getElementsByClassName("close")[0];var videoContainer=document.getElementById("videoContainer");function openVideoModal(videoUrl,videoType){modal.style.display="block";videoContainer.innerHTML='';if(videoType==='youtube'){videoContainer.innerHTML='<iframe src="'+videoUrl+'" frameborder="0" allowfullscreen></iframe>'}else if(videoType==='mp4'){videoContainer.innerHTML='<video controls><source src="'+videoUrl+'" type="video/mp4"></video>'}}
document.addEventListener('click',function(e){if(e.target&&e.target.classList.contains('watch-now')){e.preventDefault();var videoUrl=e.target.getAttribute('data-video-url');var videoType=e.target.getAttribute('data-type');openVideoModal(videoUrl,videoType)}});document.addEventListener("DOMContentLoaded",function(){var modal=document.getElementById("videoModal");var span=document.querySelector(".close");var videoContainer=document.getElementById("videoContainer");if(span){span.onclick=function(){modal.style.display="none";videoContainer.innerHTML=""}}
window.onclick=function(event){if(event.target===modal){modal.style.display="none";videoContainer.innerHTML=""}}})